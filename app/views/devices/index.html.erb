<h1>Devices</h1>


    Label name
    Serial number
    Current owner
    Purchaser
    Phone number
    Carrier
    Activation date

<% for device in @devices %>

<div id="<%= cycle('odd','even') %>">
    <%= link_to device.label_name, device %>
	<%=h device.serial_number %>
	<%=h device.maker.name %>
	<%=h device.model.name %>
    <%=h device.current_owner %>
    <%=h device.purchaser %>
    <%=h device.phone_number %>
    <%=h device.carrier %>
    <%=h device.activation_date.strftime("%m/%d/%Y") %>
    <%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end %>

