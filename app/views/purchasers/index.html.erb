<h1>Listing purchasers</h1>

<table>
  <tr>
    <td colspan="4" class="table_header">Name</td>
  </tr>

<% for purchaser in @purchasers %>
  <tr>
    <td><%= link_to purchaser.name, purchaser_path(purchaser) %></td>
    <td><%= link_to 'Destroy', purchaser, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

